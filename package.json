{
  "name": "9.0",
  "version": "1.0.0",
  "description": "zadanie 9.0",
  "main": "index.js",
  "dependencies": {
    "browser-sync": "^2.24.6",
    "globstar": "^1.0.0",
    "http-server": "^0.11.1",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0"
  },
  "devDependencies": {},
  "scripts": {"test": "npm run test:html",
    "test:html": "globstar nu-html-checker *.html",
    
    "init-project": "npm install && npm install --save-dev npm-run-all && npm install --save-dev globstar && npm-run-all init:*",
    "init:browse-sync": "npm install --save-dev browser-sync",
    "init:node-sass": "npm install --save-dev node-sass",
    "init:onchange": "npm install --seve-dev onchange",
    "init:dirs": "mkdir sass css vendor images js",
    "init:files": "touch README.md index.html sass/style.scss js/script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    
    "build": "npm-run-all build:* test",
    "build:clean": "rm -rf css/*.css",
    "build:sass": "node-sass --output-style compact -o css sass",
    "build:autoprefixer": "autoprefixer-cli css/style.css",
    "build-dev:sass": "node-sass --output-style expanded --source-map true -o css sass",
    
    "watch": "npm-run-all build -p watch:*",
   	"watch:sass": "node-sass --output-style expanded --source-map true -o css sass --watch",
	"watch:autoprefixer": "onchange -d 100 css/style.css -- autoprefixer-cli -o css/style.prefixed.css css/style.css",
    "watch:browser-sync": "node_modules/.bin/browser-sync start --server --files css/*.css *.html --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/halo2008/zadanie.90.0.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/halo2008/zadanie.90.0/issues"
  },
  "homepage": "https://github.com/halo2008/zadanie.90.0#readme"
}
